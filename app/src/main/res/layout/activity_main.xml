<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_main">

    <ListView
        android:id="@+id/diaryList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/authorInfo"
            style="@style/authorInfoButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="authorInfo" />

        <TextView
            android:id="@+id/wordCounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="xx个日记"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/createDiary"
            style="@style/newDiaryButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="toNewDiary" />
    </LinearLayout>

</LinearLayout>